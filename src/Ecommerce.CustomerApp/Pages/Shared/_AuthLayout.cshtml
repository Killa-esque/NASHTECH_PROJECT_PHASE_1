<!DOCTYPE html>
<html lang="vi" class="dark">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>@ViewData["Title"] - Sweet Bakery</title>
  <meta name="description" content="Trang đăng nhập Sweet Bakery - tiệm bánh ngọt ngào dành cho bạn." />
  <meta name="theme-color" content="#ec4899" />
  <link rel="icon" type="image/svg+xml" href="~/img/favicon.svg" />

  <link href="~/css/styles.css" rel="stylesheet" />
  @RenderSection("Styles", required: false)
</head>

<body
  class="bg-pink-50 dark:bg-gray-900 text-gray-800 dark:text-gray-100 font-[Quicksand] transition-colors duration-300">

  @RenderBody()

  @RenderSection("Scripts", required: false)
</body>

</html>
