<div class="rounded-xl shadow hover:shadow-lg transition p-4 bg-white dark:bg-gray-800 text-center">
  <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full h-48 object-cover rounded-md mb-3" />
  <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100">@Model.Name</h3>
  <p class="text-pink-600 font-bold mt-1">@Model.Price.ToString("C")</p>
  <button class="mt-3 px-4 py-1 bg-pink-500 hover:bg-pink-600 text-white rounded-full text-sm">
    Add to Cart
  </button>
</div>
