@model Ecommerce.Shared.ViewModels.SuccessViewModel

@section Scripts {
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function () {
      const orderId = '@Model.OrderId';

      if (orderId) {
        $.ajax({
          url: '/Order/Detail/' + orderId,
          type: 'GET'
        });
      } else {
        console.error('Invalid Order ID:', orderId);
        $('#orderCode').text('#' + '@Model.OrderCode');
      }
    });
  </script>
}

<section class="bg-white dark:bg-gray-800 py-24 px-6">
  <div class="max-w-xl mx-auto text-center bg-amber-50 dark:bg-gray-800 rounded-xl p-10 shadow-xl">
    <h1 class="text-3xl font-bold text-yellow-900 dark:text-yellow-300 mb-4">
      @Model.Message
    </h1>
    <p class="text-yellow-800 dark:text-yellow-200 mb-6">
      Cảm ơn bạn đã tin tưởng <strong>Sweet Bakery</strong> 💛<br />
      Chúng tôi sẽ sớm liên hệ để xác nhận đơn hàng.
    </p>

    <div class="text-sm text-yellow-900 dark:text-yellow-100 mb-8">
      Mã đơn hàng: <strong id="orderCode">#@Model.OrderCode</strong><br />
    </div>

    <div class="flex justify-center gap-4">
      <a href="/" class="btn bg-yellow-800 hover:bg-yellow-700 text-white">
        🏠 Về trang chủ
      </a>
      <a href="/Order/Detail/@Model.OrderId" class="btn btn-outline text-yellow-900 dark:text-yellow-300">
        📦 Xem đơn hàng
      </a>
    </div>
  </div>
</section>
